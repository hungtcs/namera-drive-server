{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "outDir": "../../dist/apps/namera-drive-server",
    "paths": {
      "@auth": [
        "src/app/auth/public_api"
      ],
      "@auth/*": [
        "src/app/auth/*"
      ],
      "@user": [
        "src/app/user/public_api"
      ],
      "@user/*": [
        "src/app/user/*"
      ],
      "@drive": [
        "src/app/drive/public_api"
      ],
      "@drive/*": [
        "src/app/drive/*"
      ],
      "@storage": [
        "src/app/storage/public_api"
      ],
      "@storage/*": [
        "src/app/storage/*"
      ],
      "@shared": [
        "src/app/shared/public_api"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
